#comments_area
  %h1 Listing comments

  %table
    %thead
      %tr
        %th Body
        %th
        %th

    %tbody
      - comments.each do |comment|
        %tr
          %td
            - if comment.approved?
              = comment.body
            - else
              (承認待ち)
          %td
            - if !comment.approved?
              = link_to 'Approve', approve_blog_entry_comment_path(blog, entry, comment), method: :put, remote: true
          %td= link_to 'Destroy', [blog, entry, comment], method: :delete, data: { confirm: 'Are you sure?' }, remote: true

  %br

= form_with(model: comment, url: [blog, entry, comment]) do |form|
  - if comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(comment.errors.count, "error")} prohibited this comment from being saved:"
      %ul
        - comment.errors.full_messages.each do |message|
          %li= message

  .field
    = form.label :body
    %br
    = form.text_area :body

  .actions
    = form.submit 'Save'

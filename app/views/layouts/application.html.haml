!!! 5
%html{lang: 'ja'}
  %head
    %meta{charset: 'UTF-8'}
    %title HelloRails
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    %header.header
      - if user_signed_in?
        = current_user.email
        = link_to 'Log out', destroy_user_session_url, method: :delete, data: { confirm: 'Are you sure?' }
      - else
        = link_to 'Log in', new_user_session_url

    .wrapper.clearfix
      %main.main
        %p.notice
          = notice
        %p.alert
          = alert

        = yield

      .sidemenu

    %footer.footer

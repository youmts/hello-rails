= simple_form_for [blog, entry] do |form|
  - if entry.errors.any?
    #error_explanation
      %h2
        = pluralize(entry.errors.count, "error")
        prohibited this entry from being saved:

      %ul
      - entry.errors.full_messages.each do |message|
        %li
          = message

  = form.input :title, input_html: {size: 40}
  = form.input :body
  = form.button :submit

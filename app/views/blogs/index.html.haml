%h1 Listing blogs

%main.main
  %table
    %thead
      %tr
        %th
          = sort_link(@q, :title)
        %th
        %th{colspan: "2"}

    %tbody
      - @blogs.each do |blog|
        %tr
          .scroll-item
            %td= link_to blog.title, blog
            %td= link_to 'Edit', edit_blog_path(blog)
            %td= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }

  %br

  = link_to 'New Blog', new_blog_path

.sidemenu
  = search_form_for @q, html: {class: 'search-box'} do |f|
    = f.search_field :title_cont, html: {class: 'search-input'}
    = f.submit class: 'search-button'

